<!DOCTYPE html>
<html>
<head>
  <title>LibApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <ul>
    <% if current_user %>
      <p><%= link_to "Profile", user_path(current_user) %> | <%= link_to "Log Out", logout_path %></p>
    <% else %>
      <p><%= link_to "Create Account", new_user_path %> | <%= link_to "Log In", login_path %></p>
    <% end %>
  </ul>

  <% flash.each do |name, msg| %>
    <h3><%= name.capitalize %>: <%= msg %></h3>
  <% end %>

<%= yield %>

</body>
</html>
